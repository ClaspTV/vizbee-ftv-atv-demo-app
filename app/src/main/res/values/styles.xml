<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullscreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
    
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Theme.FireTVNewDemoGroovy" parent="@style/Theme.Leanback" />

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainImageViewStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:background">@drawable/selector_poster</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="MainTitleStyle" parent="WrapWrap">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="MainSubTitleStyle" parent="MainTitleStyle">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
