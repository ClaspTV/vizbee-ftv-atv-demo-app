    <!-- Your app's theme colors -->
    <!--
      1. Primary Color - this is typically the background color used on most of your app screens
      2. Secondary Color - this is the highlight or accent color used on buttons etc. in your app screens
      3. Tertiary Color - this is the text color used in most of your app screens
      4. Subtext Color - this is the color used for subtitles and descriptions used in most of your app screens

      Update the colors below to suit your app.
    -->
    <color name="vzb_primary_color">@color/desired_modal_bg_color</color>
    <color name="vzb_secondary_color">@color/desired_modal_bg_border_color</color>
    <color name="vzb_tertiary_color">@color/desired_title_text_color</color>
    <color name="vzb_sub_text_color">@color/desired_text_description_color</color>

    <!-- Your app's theme fonts: fonts are not styled here. Here's what to do -->
    <!--
        Primary font is used for title texts and secondary font is used for description texts on modals.
        1. Copy vzb_primary_font.xml, vzb_secondary_font.xml into your res/font folder.
        2. Modify vzb_primary_font.xml to refer to your app's primary font. Eg., app:font="@font/your_app_primary_font"
        3. Modify vzb_secondary_font.xml to refer to your app's secondary font. Eg., app:font="@font/your_app_secondary_font"
    -->

